<!DOCTYPE html>
<html ng-app="myApp">
<head>
	<meta 	charset="utf-8">
	<meta 	http-equiv="X-UA-Compatible" content="IE=edge">
	<meta 	name="description" content="">
	<title 	ng-bind="title"></title>

	<!-- FONTS -->
	<link 	href="https://fonts.googleapis.com/css?family=Josefin+Sans:100|Muli:300" rel="stylesheet" type="text/css">
	<link 	rel="stylesheet" href="bower_components/font-awesome/css/font-awesome.min.css">

	<!-- ANGULARJS 角 -->
	<script src="bower_components/angular/angular.js"></script>
	<script src="bower_components/angular-route/angular-route.js"></script>
	<script src="bower_components/angular-resource/angular-resource.js"></script>
	<script src="bower_components/angular-sanitize/angular-sanitize.js"></script>

	<!-- ANGULAR WIRING 源文件 -->
	<script src="js/main.js"></script>
	<script src="js/router.js"></script>
	<script src="js/controllers.js"></script>
	<script src="js/components.js"></script>

	<!-- TRANSLATION DEPENDENCIES  -->
	<script src="bower_components/angular-translate/angular-translate.js"></script>
	<script src="bower_components/angular-translate-loader-static-files/angular-translate-loader-static-files.js"></script>	

	<!-- BOOTSTRAP -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
	<link 	href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<link 	rel="stylesheet" type="text/css" href="css/style.css" />

</head>
<body ng-view>
	<div id="background">

<!-- BROWSER WINDOW SIZE DETECTOR -->
	<section responsive="partials/large.html" 
	     smbreak=667
	     smtemplate="partials/small.html"
	     mdbreak=1024
	     mdtemplate="partials/medium.html">
	</section>

<!-- LEFT SLIDING DRAWER -->
	<div id="drawer-show">
		<div ng-click="app.showLeft($event)" id="drawer-activate"><span class="fa fa-bars"></span></div>
		<drawer visible="leftVisible" alignment="left">
			<div class="nav nav-tabs" id="spacer">
				<span ng-repeat="(key,val) in views track by $index" ng-class="{active:val}">
					<a href="" ng-click="app.tabFunction(key)">{{key | translate}}</a>
				</span> 
			</div>
		</drawer>
	</div>

	<section class="'title'">
		<h1 translate="TITLE"></h1>	
		<p translate="SUBTITLE"></p>
		<span>
			<p><span translate="GREETING"></span>, {{app.yourName | uppercase}}</p>
		</span>
		<hr class="horizontal-line">
	</section>
